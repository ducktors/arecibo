{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2015",
    "module": "commonjs",
    "outDir": "lib",
    "rootDir": ".",
    "pretty": true,
    "noEmitOnError": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "declaration": true,
    "lib": [
      "esnext"
    ]
  },
  "formatCodeOptions": {
    "identSize": 2,
    "tabSize": 2
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "lib",
    "test"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
